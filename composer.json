{
  "name": "smarthacks/slimex",
  "description": "A framework created using slim php to kickstart your project and stand out",
  "minimum-stability": "stable",
  "license": "MIT",
  "type": "project",
  "authors": [
    {
      "name": "xXAlphaManXx",
      "email": "alpha@smarthacksinc.com"
    }
  ],
  "require": {
    "slim/slim": "3.8.1",
    "slim/twig-view": "2.2.0",
    "catfan/medoo": "1.4.4",
    "php": "7.*",
    "delight-im/auth": "^5.1",
    "phpmailer/phpmailer": "^5.2",
    "symfony/dotenv": "^3.3",
    "illuminate/database": "^5.4"
  },
  "autoload": {
    "psr-4":{
      "App\\": "app/"
    }
  },
  "scripts": {
    "rm-cache": [
      "cd storage && rm -rf cache && mkdir cache && cd cache && mkdir views app"
    ],
    "post-root-package-install": [
      "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
