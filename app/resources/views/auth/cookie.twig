{% extends 'auth/templates/home.twig' %}

{% block content %}
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title" style="text-align: center;">Welcome back, {{ username }}! Enter your password to
                login</h3>
        </div>
        <div class="panel-body">
            {% if message %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endif %}
            <form action="{{ base_url() }}/auth/wake" method="POST">
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Submit">
                </div>
                <div class="form-group">
                    <a href="{{ base_url() }}/auth/delete">Not your account? Login with another account</a>
                </div>
            </form>
        </div>
        {% include 'auth/templates/error.twig' %}
    </div>
{% endblock %}