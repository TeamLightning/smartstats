{% extends 'auth/templates/home.twig' %}

{% block content %}
    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 class="panel-title" style="text-align: center;">SMART STATS</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title" style="text-align: center;">Login here</h3>
                        </div>
                        <div class="panel-body">
                            Login to see the site in action. You can almost do anything.
                            <ul>
                                <li>You can add a server and check status</li>
                                <li>Real-time server status</li>
                                <li>Only one server per account</li>
                            </ul>
                        </div>
                        <div class="panel-footer">
                            <a href="/auth/login" class="btn btn-success">Login</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title" style="text-align: center;">SignUp here</h3>
                        </div>
                        <div class="panel-body">
                            SignUp to see the site in action. Try it out.
                            <ul>
                                <li>You can add a server and check status</li>
                                <li>Real-time server status</li>
                                <li>Only one server per account</li>
                            </ul>
                        </div>
                        <div class="panel-footer">
                            <a href="/auth/signup" class="btn btn-success">Sign Up</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}