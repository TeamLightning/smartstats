{% extends 'user/templates/partials/header.twig' %}

{% block title %}Smart Stats | Contact us{% endblock %}

{% block header %}
    <h1>Contact us
        <small>Have any problem or wanna just shoot us a mail?</small>
    </h1>
{% endblock %}

{% block breadcrumb %}

{% endblock %}

{% block content %}
    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">Contact us</h3>
        </div>
        <div class="box-body">
            <form action="{{ base_url() }}/user/contact" method="post">
                <div class="form-group">
                    <label for="subject">Subject</label>
                    <input type="text" name="subject" id="subject" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="text">Message</label>
                    <textarea name="text" id="text" cols="30" rows="10" class="form-control" required></textarea>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
