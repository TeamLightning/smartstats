{% extends 'user/templates/partials/header.twig' %}

{% block title %}Smart Stats | Create{% endblock %}

{% block header %}
    <h1>
        Create your server
        <small>Add your server to be monitored correctly</small>
    </h1>
{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="{{ base_url() }}/user/home">Dashboard</a></li>
        <li class="active">Create</li>
    </ol>
{% endblock %}

{% block content %}
    {% include 'user/templates/partials/error.twig' %}

    <div class="box box-primary">
        <div class="box-header">
            <h3 class="box-title">Create Server</h3>
        </div>
        <div class="box-body">
            <form action="{{ base_url() }}/user/create" method="post">
                <div class="form-group">
                    <label for="name">Server name</label>
                    <input type="text" name="name" id="name" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="ip">IP Address</label>
                    <input type="text" name="ip" id="ip" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="port">PORT Address</label>
                    <input type="number" name="port" id="port" class="form-control" required>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="pull-right btn btn-primary">Reset</button>
            </form>
        </div>
    </div>
{% endblock %}