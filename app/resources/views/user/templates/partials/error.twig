{% if error %}
    <div class="box box-danger">
        <div class="box-header with-border">
            <h3 class="box-title">Error</h3>
        </div>
        <div class="box-body">
            <p>{{ error }}</p>
        </div>
    </div>
{% endif %}

{% if message %}
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Message</h3>
        </div>
        <div class="box-body">
            <p>{{ message }}</p>
        </div>
    </div>
{% endif %}

{% if validation %}
    <div class="box box-danger">
        <div class="box-header with-border">
            <h3 class="box-title">Error</h3>
        </div>
        <div class="box-body">
            Validation needs to be implemented
        </div>
    </div>
{% endif %}